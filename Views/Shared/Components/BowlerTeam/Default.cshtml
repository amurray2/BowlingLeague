@{
}
@model IEnumerable<Teams>

<a class="btn btn-block @(null == ViewBag.SelectedType ? "btn-primary" : "btn-outline-secondary")" asp-action="Index" asp-controller="Home" asp-route-teamId="">All Bowlers</a>

@foreach (Teams x in Model)
{
    <a class="btn btn-block @(x.TeamName == ViewBag.SelectedType ? "btn-primary" : "btn-outline-secondary")" 
       asp-action="Index" asp-controller="Home" asp-route-teamId="@x.TeamId" asp-route-teamName="@x.TeamName">@x.TeamName</a>
}